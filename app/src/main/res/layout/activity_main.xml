<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="netmyapp.fondulis.musicapp.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.92"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/radio_open_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="launchRadio"
            android:text="@string/action_radio"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_weight="0.81"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:onClick="launchAlarm"
                android:text="@string/action_alarm" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="launchNews"
                android:text="@string/action_news" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight=".2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewHelper"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:text="" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_logout"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
